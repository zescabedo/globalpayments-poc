{{
    $url = i_item.url
    $a = get_general_link_info i_item "ExternalLink" 
    $target="_self"
    $linkClass = "link-arrow-primary-1"
    $linkText = "LIRE NOS PERSPECTIVES"

    if $a != null && $a.url != ""
        $url = $a.url
        $target="_blank"
        $linkClass = "link-arrow-primary-1-45"
        $linkText = "Take our survey"
    end

    $mediaUrl = sc_fullmediaurl i_item 'BlogFeaturedImage' { Width: 440 }
    $time = i_item.BlogReadTime
    if $time == ""
        $time = "4"
    end

-}} 

<div class="wrap">
    <a title="{{ i_item.title.raw }}" href="{{ $url }}" target="{{ $target }}">
        <div class="image-wrapper position-relative">
            {{ if (o_pagemode.is_experience_editor_editing) }}
                <img src="{{ $mediaUrl }}" alt="" loading="lazy" class="img-fluid">
            {{ else }}
                <img src="{{ $mediaUrl }}" alt="{{ sc_field i_item "Blog Title" }}" loading="lazy" class="img-fluid">
            {{ end }}
        </div>
    </a>
    <div class="text-wrapper">
        <p class="field-blogreadtime"><span>Lecture&nbsp;</span>{{$time}}<span>&nbsp;min</span></p>
        <div class="promo-text">
            <p class="field-blog-title">{{ sc_field i_item "Blog Title" }}</p>
            <p class="p-sm field-blogsummary">{{ sc_field i_item "BlogSummary" }}</p>
        </div>
        <a class="{{ $linkClass }}" data-variantitemid="{{i_item.id}}" href="{{ $url }}" title="{{ i_item.title.raw }}" target="{{ $target }}">{{ $linkText }}</a>
    </div>
</div>
{{
      end -}}

{{-
    if i_item.template_name == "Customer Story"

    $target2="_self"
    $mediaUrl2 = sc_fullmediaurl i_item 'ArticlePromoImage' { Width: 440 }

-}}
      
<div class="wrap">
    <a title="{{i_item.Name}}" href="{{i_item.url}}" target="{{ $target2 }}">
        <div class="image-wrapper position-relative">
            {{ if (o_pagemode.is_experience_editor_editing) }}
                <img src="{{ $mediaUrl2 }}" alt="" loading="lazy" class="img-fluid" style="height: 203px; object-fit: cover; width: 407px">
            {{ else }}
                <img src="{{ $mediaUrl2 }}" alt="{{i_item.Name}}" loading="lazy" class="img-fluid" style="height: 203px; object-fit: cover; width: 407px">
            {{ end }}
        </div>
    </a>
    <div class="text-wrapper">
        <p class="field-blogreadtime">{{ i_item.CaseStudyReadTime}}<span>&nbsp;minute read</span></p>
        <div class="promo-text">
            <p class="field-blog-title">{{ sc_field i_item 'Title' }}</p>
            <p class="p-sm field-blogsummary">{{ sc_field i_item 'Content' }}</p>
        </div>
        <a class="link-arrow-primary-1" href="{{i_item.url}}" title="{{i_item.Name}}" target="{{ $target2 }}">LIRE NOS PERSPECTIVES</a>
    </div>
</div>

