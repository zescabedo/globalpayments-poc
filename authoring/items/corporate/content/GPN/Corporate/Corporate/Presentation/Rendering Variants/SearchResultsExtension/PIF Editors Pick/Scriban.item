{{- 

    # Content type, tags and business size
    $articleUrl = i_item.url
    $articleId = i_item.id
    $contentType = sc_translate i_item.template_name
    $contentTypeUrl = get_pif_content_type_listing_url i_item

    $externalLink = get_general_link_info i_item "ExternalLink"
    if $externalLink != null && $externalLink.url != ""
        $articleUrl = $externalLink.url
    end

    $articleTopics = sc_followmany i_item "GPIBlogCategories" | array.limit 2
    $topics = []
    for $articleTopic in $articleTopics
        $tag = sc_raw $articleTopic "Title"
        $tagUrl = $articleTopic.url
        $topics = $topics | array.add { title: $tag, url: $tagUrl}
    end

    $businessSize = ""
    $businessSizeUrl = ""
    $firstBusinessSize = sc_follow i_item "BusinessSize"
    if $firstBusinessSize
        $businessSize = sc_raw $firstBusinessSize "Title"
        $businessSizeUrl = $firstBusinessSize.url
    end
    $showPifTags = false
    if $businessSize != "" || $tag != "" 
        $showPifTags = true
    end


    # Title, publish date, minutes to read
    $title = sc_raw i_item "Blog Title"
    $publishedDate = ""
    $publishedDate = sc_field i_item "BlogPublishedDate" | date.parse | date.to_string "%A, %B %e, %Y" 

    $minutesRead = i_item.BlogReadTime | string.strip
    if $minutesRead == ""
        $minutesRead = "4"
    end

    # images
    $logoUrl = i_item.Logo.media_url
    $featuredImageUrl = sc_fullmediaurl i_item 'BlogFeaturedImage' { Width: 770 }
    $alt = i_item.BlogFeaturedImage.media_alt
    $overrideCardImage = sc_fullmediaurl i_item 'CardImageOverride' { Width: 770 }
    if ($overrideCardImage | string.size) > 0
        $featuredImageUrl = $overrideCardImage
        $alt = i_item.CardImageOverride.media_alt
    end
    $hasFeaturedImage = ($featuredImageUrl | string.size) > 0
    if ($alt | string.size == 0) 
        $alt = "Card image for '" + $title + "' " + ($contentType | string.downcase)
    end
    
    
    # Author Details
    $hasAuthor = false
    $authorName = ""
    $authorPosition = ""
    $authorImageUrl = ""
    $authorDetails = sc_follow i_item "BlogAuthor"
    $author = sc_field i_item "BlogPublishedDate"

    if $authorDetails 
        $authorName = sc_raw $authorDetails "Title"
        $authorPosition = sc_raw $authorDetails "Author Job Title"
        $authorImageUrl = $authorDetails.AuthorImage.media_url
        $authorImageUrl = sc_fullmediaurl $authorDetails 'AuthorImage' { Width: 80 }
        $hasAuthor = true
    end
    
-}}


<div class="pif-editors-pick-result pif-clickable-card">
    <div class="card-image-container">
        {{ if $hasFeaturedImage }}
            <div class="image-container">
                <img class="pif-hero-image" width="770" src="{{ $featuredImageUrl }}" alt="{{ $alt }}" />
            </div>
        {{ else }}
            <h2 class="pif-title h3-style">{{ $title }}</h2>
            <div class="content-type-details">
                <span class="p-sm published-date">{{ $publishedDate }}</span>
                {{ if $minutesRead }}
                    {{ if $minutesRead != "" }}
                        <span class="p-sm read-time">{{ $minutesRead }} {{ sc_translate "minute read"  }}</span>
                    {{ end }}
                {{ end }}
            </div>
        {{ end }}
    </div>
    <div class="editors-pick-title h6-style">{{ sc_translate "Editor's pick" }} </div>
    <div class="pif-article-details">
    <a href="{{ $contentTypeUrl }}" class="pif-content-type btn btn-xs btn-outline-primary-1">{{ $contentType }}</a>
    {{ if $showPifTags }}
        <div class="pif-tags">
            <ul>
            {{ if $topics | array.size > 0 }}
                {{ for $topic in $topics }}
                    <li><a href="{{ $topic.url }}">{{ $topic.title }}</a></li>
                {{ end }}
            {{ end }}
            {{ if $businessSize }}
                {{ if $businessSize != "" }}
                    <li><a href="{{ $businessSizeUrl }}">{{ $businessSize }}</a>
                {{ end }}
            {{ end }}
            </ul>
        </div>
    {{ end }}
    </div>
    <div class="editors-pick-details">
        {{ if $logoUrl && ($logoUrl | string.size) > 0 }}
            <img class="logo" src="{{ $logoUrl }}" />
        {{ end }}

        {{ if $hasFeaturedImage }}
            <h2 class="pif-title h3-style">{{ $title }}</h2>
        {{ end }}
        <div class="content-type-details">
            <span class="p-sm published-date">{{ $publishedDate }}</span>
            {{ if $minutesRead }}
                {{ if $minutesRead != "" }}
                    <span class="p-sm read-time">{{ $minutesRead }} {{ sc_translate "minute read"  }}</span>
                {{ end }}
            {{ end }}
        </div>
        <a class="pif-article-link link-arrow-primary-1-after-smallarrow" href="{{ $articleUrl }}" data-content-type="{{ $contentType }}" data-article-id="{{ $articleId }}">{{ sc_translate "Read article" }} <span class="pif-card-link-overlay"></span></a>
    </div>
</div>

