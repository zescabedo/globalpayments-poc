{{-
    # Podcast details
    $podcastTitle = sc_raw i_item "PodcastTitle"
    $episodeTitle = sc_raw i_item "EpisodeTitle"
    $episodeNumber = sc_raw i_item "EpisodeNumber"
    $episodeImageUrl = sc_fullmediaurl i_item 'EpisodeImage' { Width: 175 }
    $episodeImageUrlAlt = i_item.EpisodeImage.media_alt
    $subscribeLink = get_general_link i_item "SubscribeLink"
    $vidyardId = i_item.VidyardId.raw
-}}


{{ if $vidyardId }}
    {{ if $vidyardId != "" }}

        <div class="podcast-container vidyard" data-podcast-uuid="{{ $vidyardId }}">
            <div class="title-container">
                <span class="podcast-title">{{ $podcastTitle }}</span>
                {{ if $episodeNumber }}
                    <span class="episode-number">{{ sc_translate "Episode" }} {{ $episodeNumber }}</span>
                {{ end }}
            </div>
            <div class="podcast-inner-container">
                {{ if $episodeImageUrl }}
                    <div class="podcast-image">
                        <img src="{{ $episodeImageUrl }}" alt="{{ $episodeImageUrlAlt }}" />
                    </div>
                {{ end }}
                <div class="podcast">
                    <h3 class="h5-style">{{ $episodeTitle}}</h3>
                    <div class="podcast-player">
                        <button class="podcast-playbutton">
                            <img height="45" width="45" alt="Play" src="/Theme/dist/corporate/images/icons/play-primary-1.svg" />
                        </button>
                        <div class="podcast-vidyard-audio-player-embed">
                            <div class="podcast-vidyard-audio-contain">
                                <img class="vidyard-player-embed" src="https://play.vidyard.com/{{ $vidyardId }}.jpg" data-uuid="{{ $vidyardId }}" data-v="4" data-type="inline" alt="" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="information-container">
                <span class="subscribe-link">
                    {{ if $subscribeLink != "" }}
                        <a class="link-arrow-primary-1-sm" href="{{ $subscribeLink }}">{{ sc_translate "Subscribe to this podcast" }}</a>
                    {{ end }}
                </span>
                <span class="duration-details">
                    <span class="current-time"> -:-- </span> 
                    <span class="time-divider">/</span>
                    <span class="total-time"> -:-- </span>
                </span>
            </div>
        </div>

    {{ else }}
        {{ if o_pagemode.is_experience_editor }}
            <p><em>[No vidyard identifier specified]</em></p>
        {{ end }}
    {{ end }}
{{ else }}
    {{ if o_pagemode.is_experience_editor }}
        <p><em>Vidyard Id: {{ $vidyardId }}</em></p>
    {{ end }}
{{ end }}
