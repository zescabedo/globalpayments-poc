{{-
    $quote = i_item.Quote
    $author = i_item.Author
    $authorPosition = i_item.AuthorPosition
    $doNotTweet = i_item.DoNotIncludeTweetThis.raw == 1
    $iconUrl = i_item.Icon.media_url

    $hasIcon = i_item.Icon != ""

    $blockquoteClass = "pull-quote"
    if $doNotTweet 
        $blockquoteClass = $blockquoteClass + " no-tweet"
    end
    if ($hasIcon) 
        $blockquoteClass = $blockquoteClass + " show-icon-divider"
    end
-}}

{{ if $quote != "" }}
    <blockquote class="{{ $blockquoteClass }}">
        <div class="quote">{{ $quote }}</div>
        <div class="citation">
            {{ if $author != "" }}
                <div class="author-details">
                    <p class="author"><strong>{{ $author }}</strong></p>
                    {{ if $authorPosition != "" }}
                        <p class="author-position">{{ $authorPosition }}</p>
                    {{ end }}
                </div>
            {{ end }}
            {{ if $hasIcon }}
                <img src="{{ $iconUrl }}" />
            {{ end }}
        </div>
    </blockquote>
{{ end }}
