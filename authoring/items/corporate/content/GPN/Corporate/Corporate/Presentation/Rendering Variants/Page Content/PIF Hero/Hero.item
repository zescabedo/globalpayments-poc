{{-

    # Author Details
    $hasAuthor = false
    $authorName = ""
    $authorPosition = ""
    $authorImageUrl = ""
    $authorDetails = sc_follow i_item "BlogAuthor"
    $author = sc_field i_item "BlogPublishedDate"

    if $authorDetails 
        $authorName = sc_raw $authorDetails "Title"
        $authorPosition = sc_raw $authorDetails "Author Job Title"
        $authorImageUrl = sc_fullmediaurl $authorDetails 'AuthorImage' { Width: 80 }
        $hasAuthor = true
    end

    $heroToDisplay = "Article" # default to article

    if i_item.BlogFeaturedImage == ""
        $heroToDisplay = "Article without image"
    end

    $templateId = i_item.template_id

    # "56162FEF059241978F7625AA1D104583" # article
    # "EA60BED9C95C454897B6B71414876AAD" # Case study 
    # "93A3D02A51034787A6FB2B55309BD8B6" # Ebook
    # "1703F5EAEEE248DEB946A6CE48B8A05F" # Infographic
    # "8A1EB947C92B4FFB9CDDF7AEBFA4DFF8" # Webinar

    if $templateId == "047FEF2F71364EFFADA34FBCF40AD801"
        $heroToDisplay = "Podcast"
    end
    if $templateId == "B32113FE56AF4B06975771051D6A0DE7" # Video
        $heroToDisplay = "Video"
    end
    if $templateId == "EA9F35EFC9554160BFABB774B994F675"
        $heroToDisplay = "Guide"
    end

-}}

<div class="pif-hero">
    {{ if o_pagemode.is_experience_editor }}
        {{ sc_editframe i_item "PIF Hero" }}
            <p><em><small>Click here to change article details</small></em></p>
        {{ sc_endeditframe }}
    {{ end }}
    <div class="row">
        <div class="col-12 col-lg-5 desktop-left-column">
            {{ sc_execute i_item "Left Hand Side Details" }}
        </div>
        <div class="col-12 col-lg-7 desktop-right-column">
            {{ sc_execute i_item $heroToDisplay }}
            {{ if $hasAuthor }}
                 <div class="author-details author-details-mobile mt-3">
                     <img class="author-image" src="{{ $authorImageUrl }}" />
                     <div class="author-name-and-position">
                             <p class="author-name"><strong>{{ $authorName }}</strong></p>
                             <p class="author-position">{{ $authorPosition }}</p>
                     </div>
                </div>
           {{ end }}
        </div>
    </div>
</div>
