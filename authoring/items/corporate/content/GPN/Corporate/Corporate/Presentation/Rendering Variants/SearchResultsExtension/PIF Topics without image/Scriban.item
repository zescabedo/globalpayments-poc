        $articleUrl = $externalLink.url
    end

    # Title, summary
    $title = sc_raw i_item "Title"
    $summary = sc_raw i_item "Content"

-}}

<div class="pif-topics-page pif-clickable-card p-1 mt-3 mb-3">
    <h3 class="pif-title h5-style">{{ $title }}</h3>
    {{ if $summary != "" }}
        <div class="pif-description">{{ $summary }}</div>
    {{ end }}
    <div class="read-more-link">
        <a class="pt-2 pif-card-link pif-article-link link-arrow-primary-1-after-smallarrow" href="{{ $articleUrl }}" data-content-type="topics" data-article-id="{{ $articleId }}">{{ sc_translate "View articles" }} <span class="pif-card-link-overlay"></span></a>
