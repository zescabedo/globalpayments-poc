{{ if (!o_pagemode.is_experience_editor_editing) 
  $v = get_general_link_info i_datasource "HeroMovie"
  $vUrl = ''
  if($v)
      $vUrl = $v.url
  end
  $i_url = ""

  p_bgurl = sc_follow i_datasource "HeroBackgroundImage" | sc_medialink
  p_sm_bgurl = sc_follow i_datasource "HeroSmImage" | sc_medialink

  if(p_bgurl && p_bgurl != "" && p_bgurl != "#")
    p_md_bgurl = p_bgurl
    $i_url = p_bgurl
    p_bgurl = "background-image:url('" +p_bgurl + "')"
  else
     p_bgurl = ""
     p_md_bgurl = p_bgurl
  end

  if(p_sm_bgurl && p_sm_bgurl != "" && p_sm_bgurl != "#")
    p_sm_bgurl = p_sm_bgurl
  else
     p_sm_bgurl = ""
  end

  i_targetBgSize = i_datasource.BackgroundSize
 
  if(i_targetBgSize && i_targetBgSize != "")
    p_bgsize = sc_follow i_datasource "BackgroundSize" | sc_field "Value"
    p_bgsize = "background-size:" + p_bgsize  + ";"
  else
     p_bgsize = ""
  end

  p_mobx = sc_raw i_datasource "Mobile X Point"
  p_moby =  sc_raw i_datasource "Mobile Y Point"
  p_nonmobx = sc_raw i_datasource "NonMobile X Point"
  p_nonmoby = sc_raw i_datasource "NonMobile Y Point"

  $cta = get_general_link_info i_datasource "HeroLink"
  $videoAttrs = "playsinline muted autoplay"

  if sc_parameter 'Loop'
    $videoAttrs = "playsinline muted loop autoplay"
  end
 
 -}}
 <div class="video-plus h-100">
    <section class="video-wrap static-autoplay" style="max-height:62rem;">
      <video {{ $videoAttrs }} class="video-background h-100 image-focal-set video-cover" loop="" id="video_static" poster="{{ $i_url }}" title="Decorative background video" data-imagemode="object" data-mobxfp="{{ p_mobx ?? '' }}"  data-mobyfp="{{ p_moby ?? '' }}" data-nonmobxfp="{{  p_nonmobx ?? '' }}"  data-nonmobyfp="{{ p_nonmoby ?? '' }}">
        <source src="{{ $vUrl }}" type="video/webm">
        <source src="{{ $vUrl }}" type="video/mp4">
      </video>
    </section>
  </div>
  <div class="hero-bg video-desktop image-focal-set" style="{{p_bgurl}};{{p_bgsize}}" data-mobxfp="{{ p_mobx ?? '' }}"  data-mobyfp="{{ p_moby ?? '' }}" data-nonmobxfp="{{  p_nonmobx ?? '' }}"  data-nonmobyfp="{{ p_nonmoby ?? '' }}" data-mobilebg="{{ p_sm_bgurl }}" data-desktopbg="{{ p_md_bgurl }}"> 
{{end }}

{{ if (o_pagemode.is_experience_editor_editing) }}
 <div class="hero-bg">
{{ end }}

<div class="container">
  <div class="promo-content">
    <div class="row m-sm-auto">
      <div class="col-12 col-lg-10 offset-lg-1 promo-left">
        <div class="promo-text">
          <div>
            <div class="field-herotext">{{ sc_field i_datasource 'HeroText' }}</div>
            <div class="field-herotext2">{{ sc_field i_datasource 'HeroText2' }}</div>
            <div class="col-12 col-lg-7 p-0 field-herotext3">{{ sc_field i_datasource 'HeroText3' }}</div>
          </div>
          {{ if $a != null && $a.url != "" }}
          <div class="field-herolink">
            <a href="{{ $cta.url }}" class="{{ $cta.styleclass}}">{{ $cta.text }}</a>
          </div>
          {{ end }}
        </div>
        
      </div>
    </div>
  </div>
</div>

</div>
